{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6"
    ],
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./webpack.config.ts",
    "./config",
    "./config/jest/setupTests.ts",
    "./src/**/*.tsx",
    "./src/**/*.ts",
  ]
}
